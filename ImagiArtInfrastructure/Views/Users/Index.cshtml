@model IEnumerable<ImagiArtDomain.Model.User>

@{
    ViewData["Title"] = "Користувачі";
}

<h3>Користувачі</h3>

<p>
    <a asp-action="Create">Новий користувач</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Інфо</a>
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редагувати</a>
                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
